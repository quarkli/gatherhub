<% provide(:title, "Home") %>
<div class="center jumbotron">
    <h1>Welcome to the GatherHub</h1>
    <h2>Connect, Collaborate, Communicate    </h2>
    <% if logged_in?%>
        <%= link_to "Find A Hub", hub_url(current_hub), class: "btn btn-lg btn-primary" %>
    <%else%>
        <%= link_to "Find A Hub", login_path, class: "btn btn-lg btn-primary" %>
    <%end%>
    <%= link_to "Create A Hub", newhub_path, class: "btn btn-lg btn-primary" %>
</div>
